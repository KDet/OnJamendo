<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:OnJamendo" xmlns:converters="using:OnJamendo.Common.Converters">
    <converters:IntegerToTimeSpanStringConverter x:Key="IntegerToTimeSpanStringConverter"/>
    <converters:CountToStringConverter x:Key="CountToStringConverter"/>
    <DataTemplate x:Key="TrackDataTemplate">
        <Border Height="200" Width="200" BorderBrush="{StaticResource ListViewItemFocusBorderThemeBrush}" >
            <Grid>
                <Image Stretch="UniformToFill" Source="{Binding Album_Image}"/>
                <StackPanel VerticalAlignment="Bottom" Background="{StaticResource ListViewItemPointerOverBackgroundThemeBrush}">
                    <TextBlock TextWrapping="Wrap" Text="{Binding Name}" Margin="5,0,5,5" Style="{StaticResource TitleTextStyle}" Foreground="Black" TextAlignment="Center"/>
                    <TextBlock TextWrapping="Wrap" Text="{Binding Artist_Name}" Margin="5,0,5,5" Style="{StaticResource SubtitleTextStyle}" Foreground="Yellow"/>
                    <TextBlock TextWrapping="Wrap" Text="{Binding Album_Name}" Margin="5,0,5,5" Style="{StaticResource CaptionTextStyle}" TextAlignment="Center" Foreground="{StaticResource ListViewItemCheckThemeBrush}"/>
                </StackPanel>
            </Grid>
        </Border>
    </DataTemplate>
    <DataTemplate x:Key="AlbumDataTemplate">
        <Border Height="200" Width="200" BorderBrush="{StaticResource ListViewItemFocusBorderThemeBrush}" >
            <Grid>
                <Image Stretch="UniformToFill" Source="{Binding Image}"/>
                <StackPanel VerticalAlignment="Bottom" Background="{StaticResource ListViewItemPointerOverBackgroundThemeBrush}">
                    <TextBlock TextWrapping="Wrap" Text="{Binding Name}" Margin="5,0,5,5" Style="{StaticResource TitleTextStyle}" Foreground="Black" TextAlignment="Center"/>
                    <TextBlock TextWrapping="Wrap" Text="{Binding Artist_Name}" Margin="5,0,5,5" Style="{StaticResource SubtitleTextStyle}" Foreground="Red"/>
                    <Grid Margin="5,0,5,5" >
                        <TextBlock TextWrapping="Wrap" Text="{Binding Duration, Converter={StaticResource IntegerToTimeSpanStringConverter}}" Foreground="{StaticResource ListViewItemCheckThemeBrush}" Style="{StaticResource CaptionTextStyle}" HorizontalAlignment="Left"/>
                        <TextBlock TextWrapping="Wrap" Text="{Binding TrackCount, Converter={StaticResource CountToStringConverter}}" Style="{StaticResource CaptionTextStyle}" Foreground="{StaticResource ListViewItemCheckThemeBrush}" HorizontalAlignment="Right" />

                    </Grid>
                </StackPanel>
            </Grid>
        </Border>
    </DataTemplate>
    <DataTemplate x:Key="PlayListDataTemplate">
        <Border BorderBrush="{StaticResource ListViewItemFocusBorderThemeBrush}" >
            <Grid>
                <Image Stretch="UniformToFill" Source="{Binding Image}"/>
                <StackPanel x:Name="StackInfo" VerticalAlignment="Bottom" Background="{StaticResource ListViewItemPointerOverBackgroundThemeBrush}" Margin="0,0,0,50">
                    <TextBlock TextWrapping="Wrap" Text="{Binding Name}" Margin="5,0,5,5" Style="{StaticResource SubheaderTextStyle}"  TextAlignment="Center" Foreground="{StaticResource ToggleButtonPressedForegroundThemeBrush}" FontWeight="SemiBold" />
                    <Grid Margin="5,0,5,5" >
                        <TextBlock TextWrapping="Wrap" Text="{Binding Duration, Converter={StaticResource IntegerToTimeSpanStringConverter}}" Foreground="#BF000000" Style="{StaticResource CaptionTextStyle}" HorizontalAlignment="Left"/>
                        <TextBlock TextWrapping="Wrap" Text="{Binding TrackCount, Converter={StaticResource CountToStringConverter}}" Style="{StaticResource CaptionTextStyle}" Foreground="#BF000000" HorizontalAlignment="Right" />

                    </Grid>
                </StackPanel>
            </Grid>

        </Border>

    </DataTemplate>
